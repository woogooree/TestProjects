<Window x:Class="WpfChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="520">
    <Grid>
        <TextBox Name="ChatTextBox" HorizontalAlignment="Left" Height="246" Margin="10,10,0,0" VerticalAlignment="Top" Width="497" IsReadOnly="True" TextWrapping="Wrap"/>
        <TextBox Name="MessageTextBox" HorizontalAlignment="Left" Height="35" Margin="10,262,0,0" VerticalAlignment="Top" Width="397" KeyDown="MessageTextBox_KeyDown"/>
        <Button Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="35" Margin="417,262,0,0" Click="SendButton_Click"/>
    </Grid>
</Window>
